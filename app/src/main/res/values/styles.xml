<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
       <!-- <item name="windowNoTitle">true</item>-->
      <!--  <item name="windowActionBar">false</item>-->
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>

    </style>

    <style name="AppTheme.TransNav" parent="AppTheme" />


    <style name="AppNoActionBarTheme" parent="AppBaseTheme">
         <item name="windowNoTitle">true</item>
          <item name="windowActionBar">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>

    </style>


    <style name="style_Hdr_Txt" style="@style/Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="style_profileInfo_Txt" style="@style/Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#01011d</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="style_RBtn_Txt" style="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">#000226</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Registration Page Styles Stars-->
    <style name="style_InputLayout" parent="Base.TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txt_Color</item>
        <item name="android:textColorHint">@color/txt_Hint</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="style_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#1D1D1D</item>
        <item name="android:textColorHint">#181818</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:background">@drawable/edit_txt_bg</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
    </style>

    <style name="DlgAnimFadeIn">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <string-array name="values">
        <item>1</item>
        <item>2</item>
        <item>3</item>
        <item>4</item>
        <item>5</item>
        <item>6</item>
    </string-array>


</resources>
